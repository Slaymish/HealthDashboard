{{ template "layout.tmpl" . }}

{{ define "content" }}
<div class="grid gap-6 sm:gap-8 md:grid-cols-3">
  <!-- forms -->
  <div class="space-y-6 md:col-span-1">
    {{ template "cards.tmpl" . }}
  </div>

  <!-- tables + charts -->
  <div class="space-y-8 md:col-span-2">
    <div id="summary">
      {{ template "daily_summary.tmpl" .Summary }}
    </div>

    <!-- BMI chart card -->
    {{ template "bmi_chart.tmpl" . }}

    <!-- Weekly stats card (HTMX loads partial) -->
    <div class="bg-white dark:bg-zinc-900 rounded-2xl shadow p-5 sm:p-6"
         hx-get="/weekly" hx-trigger="load every 10m" hx-swap="outerHTML">
      Loading weekly statsâ€¦
    </div>

    <div id="foodList">
      {{ template "food.tmpl" .Food }}
    </div>
  </div>
</div>
{{ end }}

